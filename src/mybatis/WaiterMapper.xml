<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="dao.WaiterDao">


    <select id="checkWaiterAcot" parameterType="pojo.Waiter" resultType="Integer">
        select count(*) from tb_waiter where wacot=#{wacot} and wpsd=#{wpsd}
    </select>

    <update id="updateStatus" parameterType="pojo.Waiter">
        update tb_waiter set wstatus = 1 where wacot=#{wacot} ;
    </update>

    <select id="checkWaiterAcotRepeat" parameterType="pojo.Waiter" resultType="Integer">
        select count(*) from tb_waiter where wacot=#{wacot}
    </select>

    <insert id="registerWaiter" parameterType="pojo.Waiter">
         insert into tb_waiter (wacot,wpsd,wname) values(#{wacot},#{wpsd},#{wname})
    </insert>


</mapper>